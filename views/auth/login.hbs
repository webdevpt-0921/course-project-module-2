  <div class='mt-4'>
    <form class='flex flex-col gap-y-4 mt-4' method='post' action='/auth/login'>
      <input
        class='p-4 rounded-xl border border-solid border-gray-400'
        type='text'
        name='email'
        id='email'
        placeholder='email'
      />
      <input
        class='p-4 rounded-xl border border-solid border-gray-400'
        type='password'
        name='password'
        id='password'
        placeholder='password'
      />
      {{#if errorMessage}}
        <span class='rounded-xl border border-solid border-red-500 p-4 bg-red-200 text-red-500'>
          {{errorMessage}}
        </span>
      {{/if}}
      <a href='' class='text-xs font-medium text-center'>forgot password?</a>
      <button type='submit' class='btn'>Log in</button>
      <a href='' class='text-xs font-medium text-center'>Sign up</a>
    </form>
  </div>
</div>